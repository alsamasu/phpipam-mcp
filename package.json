{
  "name": "phpipam-mcp",
  "version": "0.1.0",
  "description": "MCP server for phpIPAM IP Address Management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "phpipam-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
